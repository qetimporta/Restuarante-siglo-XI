@using Restaurante_siglo_XI
@{
    ViewBag.Title = "Index";
}

<h2>Listado de clientes registrados</h2>
@{ List<Personal> personas = (List<Personal>)ViewBag.personas;}

<button><i class="fas fa-arrow-circle-left"></i>@Html.ActionLink("Volver", "homeAdmin", "Persona")</button>

<div class="row">
    <div class="col-md-12">
        <table>
            <tr>
                <th>run de personal</th>
                <th>nombre del funcionario</th>
                <th>apellidos paternos y maternos</th>
                <th>correo electronico</th>
                <th>cuenta activa</th>
                <th>comuna que pertenece</th>
                <th>cargo</th>
                <th>bodega</th>
                <th>opciones</th>
            </tr>
            @foreach (var persona in personas)
            {
        <tr>
            @if (persona.activo == "1")
            {
                <td>@persona.rutpersona</td>
                <td>@persona.Nombre_persona</td>
                <td>@persona.apellidosPersonal</td>
                <td>@persona.Correo_personal</td>
                <td>@persona.activo</td>
                <td>@persona.Comuna.nombre_comuna</td>
                <td>@persona.Cargo.nombre_cargo</td>
                <td>@persona.Bodega.nombreBodega</td>
                <td>
                    @Html.ActionLink("Modificar", "Edit", new { id = persona.id_persona })
                    @Html.ActionLink("Eliminar", "Delete", new { id = persona.id_persona })
                </td>
            }


        </tr>
                }

        </table>

    </div>
</div>

<br />
