                <th>bodega</th>
                <th>opciones</th>
            </tr>
            @foreach (var person in personas)
            {
                <tr>
                    @if (person.activo == "0")
                    {
                        <td>@person.rutpersona</td>
                        <td>@person.Nombre_persona</td>
                        <td>@person.apellidosPersonal</td>
                        <td>@person.Correo_personal</td>
                        <td>@person.activo</td>
                        <td>@person.Comuna.nombre_comuna</td>
                        <td>@person.Cargo.nombre_cargo</td>
                        <td>@person.Bodega.nombreBodega</td>
                        <td>
                            @Html.ActionLink("Modificar", "Edit", new { id = person.id_persona })
                            @Html.ActionLink("Eliminar", "Delete", new { id = person.id_persona })
                        </td>
                    }


                </tr>
            }

        </table>

    </div>
</div>
