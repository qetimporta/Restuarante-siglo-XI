@model Restaurante_siglo_XI.Mesa
@{
    ViewBag.Title = "Crear mesas";
}

<h2>Crear nueva mesa</h2>
<button>@Html.ActionLink("Volver", "homeAdmin", "Persona")</button>

@using (Html.BeginForm())
{
    @Html.TextBoxFor(m => m.ubicacion_mesa, new { placeholder = "Ubicación de la Mesa" })
    <br />
    @Html.TextBoxFor(m => m.maxima_comensales, new { placeholder = "cantidad maxima de la mesa" })
    <br />
    <button>Crear Mesa</button>
}
