@using Restaurante_siglo_XI
@{
    ViewBag.Title = "reCliente";
}

<h2>tus reservas</h2>
@{ Cliente cl = (Cliente)ViewBag.cliente;}
@{ List<Reserva> re = (List<Reserva>)ViewBag.ListaReserva;}
<a href="@Url.Action("homeUser","Persona",new {correo =cl.correoCliente})"><i class="fas fa-arrow-circle-left"></i> VOLVER</a>


<div class="row">
    <div class="col-md-12">
        <table>
            <tr>
                <th>fecha reserva</th>
                <th>mesa a ocupar</th>
            </tr>

            @foreach (var r in re)
            {
                <tr>
                    <td>@r.fecha_reserva</td>
                    <td>@r.mesa.numeroMesa</td>
                </tr>
            }
        </table>
    </div>
</div>